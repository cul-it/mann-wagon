%header
  .cu-banner
    %a.cu-banner__insignia.link--no-color{title: "Cornell.edu Homepage", href: "http://cornell.edu"}
      %span.cu-banner__uni-name.link--no-color Cornell University
  .mann-brand{href: "/"}
    %a.mann-brand__logo.drop-mobile{title: "Home", href: "/"}

    %h2.mann-brand__one-lib
      %a.link--no-color{title: "Cornell University Library", href: "http://library.cornell.edu"} Cornell University Library
    %h1.mann-brand__mannlib
      %a.link--no-color{title: "Home", href: "/"} {{ site.seo_title | upcase }}

  %form.search{role: "search"}
    %input.search__term{type: "text", placeholder: "Search for books, articles, databases, journals and more"}
      %button.search__button{type: "button"}
        %i.fa.fa-search

  .todays-hours
    %h5.todays-hours__datetime
      {{ now | date: '%b %-d, %Y' }}
      %a.todays-hours__more{href: "{% path_to hours %}"}
        All Hours
        %i.fa.fa-angle-double-right

    %span{ class: "badge todays-hours__now {% if mannlib_hours.open == 'Open' %}is-open{% else %}is-closed{% endif %}" } {{ mannlib_hours.open }}

    %span.todays-hours__until until {{ mannlib_hours.hours }}

%nav.site-nav{role: "navigation"}
  %ul.site-nav__list
    {% nav site, no_wrapper: true, active_class: active %}
