<div class="ui floating labeled icon dropdown tiny button">
  <input id="sort" name="sort" aria-label="Sort staff" type="hidden">
  <i class="sort icon"></i>
  <span class="text">Sort</span>
  <div class="menu">
    <div class="item" data-value="last_name">Last Name</div>
    <div class="item" data-value="first_name">First Name</div>
    <div class="item" data-value="division">Division</div>
  </div>
</div>

<div class="ui floating labeled icon dropdown tiny button">
  <input id="division" name="division" aria-label="Filter staff by division" type="hidden">
  <i class="sitemap icon"></i>
  <span class="text">Division</span>
  <div class="menu">
    <div class="item" data-value="{% path_to staff %}">Show All</div>
    {% for division in contents.divisions %}
      <div class="item" data-value="{% path_to division %}">
        {{ division.name }}
      </div>
    {% endfor %}
  </div>
</div>

<div id="view" class="ui tiny icon buttons">
  <button class="ui icon button" value="table"><i class="list icon"></i></button>
  <button class="ui icon button" value="cards"><i class="block layout icon"></i></button>
</div>
