<script>
  (function() {
    var cx = '{{ site.metafields.sensitive_data.google_cse_id }}';
    var gcse = document.createElement('script');
    gcse.type = 'text/javascript';
    gcse.async = true;
    gcse.src = 'https://cse.google.com/cse.js?cx=' + cx;
    var s = document.getElementsByTagName('script')[0];
    s.parentNode.insertBefore(gcse, s);
  })();
</script>

<div class="site-search">
  <form class="site-search__trigger" action="{{ path }}">
    <input type="text" aria-label="Search this site" name="q" value="{{ params.q | escape }}">
    <input type="submit" value="Search" aria-hidden="true">
  </form>

  <div class="site-search__results">
    <gcse:searchresults-only linkTarget="_self"></gcse:searchresults-only>
  </div>
</div>
