%html{lang: "en"}
  %head
    %meta{charset: "utf-8"}
    %title {{ site.name }}
    %meta{name: "keywords", value: "{{ site.meta_keywords }}"}
    %meta{name: "description", value: "{{ site.meta_description }}"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1, maximum-scale=1"}
    {{ 'application.css' | stylesheet_tag }}
  %body
    {% include 'header' %}
    %main
      {% block 'main' %}
