      %section.available-now
        %h4.lead-in
          Available Now
          %span.now {{ now | timezone: 'Eastern' | date: '%-I:%M %p' }}

        .available-grp.available-consultation
          %h5 Consultation

          %ul.available-now
            %li.available-item
              %span.badge.badge-success +
              Reference
            %li.unavailable-item
              %span.badge.badge-error x
              GIS
            %li.available-item
              %span.badge.badge-success +
              CISER
            %li.available-item
              %span.badge.badge-success +
              Knight Writing Institute

        .available-grp.available-computers
          %h5 Computers

          %ul.available-now
            %li.unavailable-item
              %span.badge.badge-error 0
              Desktops
            %li.available-item
              %span.badge.badge-success 27
              Laptops

        .available-grp.available-study
          %h5 Places to Study

          %ul.available-now
            %li.available-item
              %span.badge.badge-success +
              Individual Rooms
            %li.unavailable-item
              %span.badge.badge-success +
              Group Rooms
            %li.unavailable-item
              %span.badge.badge-error x
              Graduate Rooms
            %li.available-item
              %span.badge.badge-success +
              One Button Studio
            %li.unavailable-item
              %span.badge.badge-error x
              Interview Room
            %li.available-item
              %span.badge.badge-success +
              Bissett Workstations

      %section.events-exhibits
        %h4.lead-in Events &amp; Exhibits

        %h5.event-day Today

        %ul.events
          %li.event
            %h6.event-title
              %a{href: "#"} Career Development

            %dl.event-detail
              %dt time
              %dd 8 am - 5 pm

              %dt location
              %dd Room 102

          %li.event
            %h6.event-title
              %a{href: "#"} Plant Breeding Seminar

            %dl.event-detail
              %dt time
              %dd 8 am - 1 pm

              %dt location
              %dd Room 100

          %li.event
            %h6.event-title
              %a{href: "#"} Data Management Seminar

            %dl.event-detail
              %dt time
              %dd 2 pm - 4 pm

              %dt location
              %dd Room 100

        %a.more-link{href: "#"} All Events >>

      %section.workshops-classes
        %h4.lead-in Workshops &amp; Classes

        %h5.event-day Today

        %ul.events
          %li.event
            %h6.event-title
              %a{href: "#"} AEM 4070 001/AEM 6070 001

            %dl.event-detail
              %dt time
              %dd 10:10 am - 11:20 am

              %dt location
              %dd Basement 30A

        %h5.event-day Tomorrow

        %ul.events
          %li.event
            %h6.event-title
              %a{href: "#"} Sheep - ANSC 3800

            %dl.event-detail
              %dt time
              %dd 8 am - 1 pm

              %dt location
              %dd Basement 30B

          %li.event
            %h6.event-title
              %a{href: "#"} GIS for MLA students

            %dl.event-detail
              %dt time
              %dd 1:30 pm - 3 pm

              %dt location
              %dd Stone Classroom

        %a.more-link{href: "#"} All Workshops >>

