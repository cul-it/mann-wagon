%section.available-now
  %h4.available-now__heading.lead-in
    Available Now
    %span.available-now__datetime {{ now | date: '%-I:%M %p' }}

  .available-now__grp.available-now__study
    %h5.available-now__subheading Study Spaces

    %ul
      %li.available-now__status--available
        {% with_scope _slug: 'individual-study-rooms' %}{% assign space = contents.spaces.first %}{% endwith_scope %}
        %a.available-now__link{href: "{% path_to space %}"}
          %i.fa.fa-fw.fa-check-square
          Individual Rooms
      %li.available-now__status--available
        {% with_scope _slug: 'group-study-rooms' %}{% assign space = contents.spaces.first %}{% endwith_scope %}
        %a.available-now__link{href: "{% path_to space %}"}
          %i.fa.fa-fw.fa-check-square
          Group Rooms
      %li.available-now__status--unavailable
        {% with_scope _slug: 'grad-rooms' %}{% assign space = contents.spaces.first %}{% endwith_scope %}
        %a.available-now__link{href: "{% path_to space %}"}
          %i.fa.fa-fw.fa-minus-square
          Graduate Rooms
      %li.available-now__status--available
        {% with_scope _slug: 'one-button-studio' %}{% assign space = contents.spaces.first %}{% endwith_scope %}
        %a.available-now__link{href: "{% path_to space %}"}
          %i.fa.fa-fw.fa-check-square
          One Button Studio
      %li.available-now__status--unavailable
        {% with_scope _slug: 'interview-room' %}{% assign space = contents.spaces.first %}{% endwith_scope %}
        %a.available-now__link{href: "{% path_to space %}"}
          %i.fa.fa-fw.fa-minus-square
          Interview Room
      %li.available-now__status--available
        {% with_scope _slug: 'bissett-workstations' %}{% assign space = contents.spaces.first %}{% endwith_scope %}
        %a.available-now__link{href: "{% path_to space %}"}
          %i.fa.fa-fw.fa-check-square
          Bissett Workstations

    %a{href: "{% path_to spaces %}" }
      %button.available-now__find-space Find a Space

  .available-now__grp.available-now__consultation
    %h5.available-now__subheading Consultation

    %ul
      %li.available-now__status--available
        %i.fa.fa-fw.fa-check-square
        Reference
      %li.available-now__status--unavailable
        %i.fa.fa-fw.fa-minus-square
        GIS
      %li.available-now__status--available
        %i.fa.fa-fw.fa-check-square
        CISER
      %li.available-now__status--available
        %i.fa.fa-fw.fa-check-square
        Knight Writing Institute

  .available-now__grp.available-now__computers
    %h5.available-now__subheading Computers

    %ul
      %li.available-now__status--unavailable
        %a.available-now__link{href: "{% path_to desktops %}"}
          %i.fa.fa-fw.fa-minus-square
          Desktops
          %span.badge.badge-error 0
      %li.available-now__status--available
        %a.available-now__link{href: "{% path_to laptops %}"}
          %i.fa.fa-fw.fa-check-square
          Laptops
          %span.badge.badge-success 27

#events-container{"booked-username" => "{{site.metafields.sensitive_data.booked_username}}", "booked-password" => "{{site.metafields.sensitive_data.booked_password}}"}
  %section.events-home
    %h4.events-home__heading.lead-in
      %a.events-home__heading-link{href: "{% path_to events %}"}
        Events &amp; Exhibits

    %div{"v-show" => "showNoEventsMessage"} loading...

    %template{"v-for" => "(date, events) in allEvents | limitListFilter 3 | groupBy 'event_start'"}

      %h5.events-home__day ((date | momentHomeDateText))

      %ul.events-home__list

        %li.events-home__event{"v-for" => "event in events"}
          %h6.events-home__title
            %a{href: "javascript:void(0);"} ((event.event_title))

          %dl
            %dt.events-home__label time
            %dd.events-home__time{"v-if" => "event.event_end_time"} ((event.event_start_time | momentHomeTime )) - ((event.event_end_time | momentHomeTime))
            %dd.events-home__time{"v-else" => ""} ((event.event_start_time | momentHomeTime ))


            %dt.events-home__label location
            %dd.events-home__location ((event.event_room_name))



    %a.more-link{href: "{% path_to events %}"}
      All Events
      %i.fa.fa-angle-double-right

  %section.events-home.workshops
    %h4.lead-in
      %a.events-home__heading-link{href: "{% path_to events %}"}
        Workshops &amp; Classes

    %div{"v-show" => "showNoEventsMessage"} loading...

    %template{"v-for" => "(date, events) in allEvents | eventTypeFilter 'Class/ Workshop' | limitListFilter 3 | groupBy 'event_start'"}

      %h5.events-home__day ((date | momentHomeDateText))

      %ul.events-home__list

        %li.events-home__event{"v-for" => "event in events"}
          %h6.events-home__title
            %a{href: "javascript:void(0);"} ((event.event_title))

          %dl
            %dt.events-home__label time
            %dd.events-home__time{"v-if" => "event.event_end_time"} ((event.event_start_time | momentHomeTime )) - ((event.event_end_time | momentHomeTime))
            %dd.events-home__time{"v-else" => ""} ((event.event_start_time | momentHomeTime ))


            %dt.events-home__label location
            %dd.events-home__location ((event.event_room_name))


    %a.more-link{href: "{% path_to events %}", "v-on:click" => "setFilterCookie()"}
      All Workshops &amp; Classes
      %i.fa.fa-angle-double-right

