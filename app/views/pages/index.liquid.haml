---
title: Home
handle: home
published: true
listed: false
---
{% extends 'layouts/default' %}

{% block 'main' %}
%section.available-now
  %h4.available-now__heading.lead-in
    Today @ Mann
    %span.available-now__datetime {{ now | date: '%-I:%M %p' }}

  {% include 'availnow-computers' %}

  .available-now__grp.available-now__study
    {% include 'availnow-study' %}

  .available-now__grp.available-now__consultation
    %h5.available-now__subheading
      %a.available-now__link{href: "{% path_to consultation-services %}", title: "View all consultation services"}
        Consultation

    %ul
      %li.available-now__status.available-now__status--available
        %i.fa.fa-fw.fa-check-square
        Reference
      %li.available-now__status.available-now__status--unavailable
        %i.fa.fa-fw.fa-minus-square
        GIS
      %li.available-now__status.available-now__status--available
        %i.fa.fa-fw.fa-check-square
        CISER
      %li.available-now__status.available-now__status--available
        %i.fa.fa-fw.fa-check-square
        Knight Writing Institute

{% include 'spotlights-carousel' %}

%events{"r25-webservice-authorization" => "{{site.metafields.sensitive_data.r25_webservice_authorization}}", "default-number-of-days" => "{{site.metafields.events_config.default_number_of_days}}"}

{{ 'homePageEvents.bundle.js' | javascript_tag }}

%section.meet-experts
  %h4.meet-experts__heading.lead-in Meet Our Experts

  {% include 'meet-experts' %}

  %a.meet-experts__all-experts.more-link{href: "{% path_to staff %}", title: "View all Mann librarians and staff" }
    Meet All Our Experts
    %i.fa.fa-angle-double-right

{% endblock %}
