---
title: Spaces Type template page
content_type: spaces_types
---
{% extends layouts/default %}

{% block main %}

<p>{{ spaces_type.description }}</p>

{% if spaces_type._slug == 'study' %}
  <div class="ui secondary pointing menu">
    {% for study_type in contents.spaces_study_types %}
      {% capture study_type_icon %}
        {% case study_type._slug %}
          {% when 'group' %}
            fa-users
          {% when 'individual' %}
            fa-user
          {% when 'quiet' %}
            fa-volume-down
        {% endcase %}
      {% endcapture %}

      <a class="item" href="#{{study_type._slug}}">
        <i class="fa {{ study_type_icon }} icon"></i> {{ study_type.name }}
      </a>
    {% endfor %}
  </div>

  {% for study_type in contents.spaces_study_types %}
    <h3 id="{{study_type._slug}}" class="space-finder__subheading">{{ study_type.name }}</h3>

    <div class="ui three stackable cards space-finder__cards">
      {% for space in study_type.spaces %}
        {% include 'spaces-card' %}
      {% endfor %}
    </div>
  {% endfor %}

{% else %}
  <div class="ui three stackable cards space-finder__cards">
    {% for space in spaces_type.spaces %}
      {% include 'spaces-card' %}
    {% endfor %}
  </div>
{% endif %}

{% endblock %}
